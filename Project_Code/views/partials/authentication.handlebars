{{!-- Recruiter Modal--}}
<div class="modal fade" id="recruiterLogin" tabindex="-1" role="dialog" aria-labelledby="Login" aria-hidden="true">
	<div class="modal-dialog modal-dialog-centered" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
				</button>
			</div>
			<div class="modal-body">
				<div class="form-title text-center">
				<h4>Recruiter Login</h4>
				</div>
				<div class="d-flex flex-column text-center">
					<form action="/recruiters/login" method="post" id="recloginform">
						<div class="form-group">
							<div id="emailerr" class="error"></div>
							<input type="email" name="email" id="recAuthEmail" class="form-control" placeholder="Your email address" aria-placeholder="Your email address" required>
						</div>
						<div class="form-group">
							<input type="password" name="password" id="recAuthPwd" class="form-control" placeholder="Password" aria-placeholder="Password" required>
						</div>
						<div class="form-group">
							<input type="checkbox" id="recRememberSession"></input>
							<label for="rememberSession">Remember Me</label>
						</div>
						<button type="submit" id="recloginsubmit" class="col-12 btn btn-dark btn-round">Login</button>
					</form>
				</div>
			</div>
			<div class="modal-footer d-flex justify-content-center">
				<div class="signup-section">Not a member yet? <a href="recruiters/signup" class="text-info" id="recruiterSignupBtn" data-bs-toggle="modal"> Sign Up</a>.</div>
			</div>
		</div>
	</div>
</div>

