<div id="recruiterProfileEditCreate" aria-labelledby="recruiterProfileEditCreate">
    <div class="form-title text-center">
       <h1>{{title}} Profile</h1>
    </div>
    <div class="d-flex flex-column text-center">
        {{#if mainerr}}
        <div class="error">{{message}}</div>
        {{/if}}
        <p>{{recid}}</p>
        <form action="/recruiters/profile/{{action}}" method="{{method}}" id="recProfileCreateEdit" autocomplete="off">
            <div class="form-group">
                {{#if genErr}}
                <div class="error">{{message}}</div>
                {{/if}}
                <label for="recGender" class="col-form-label">Gender: </label>
                <input type="text" name="gender" id="recGender" class="form-control mb-3" placeholder="M/F/U" >
            </div>
            <div class="form-group">
                {{#if compNameErr}}
                <div class="error">{{message}}</div>
                {{/if}}
                <label for="recCompany" class="col-form-label">Company: </label>
                <input type="text" name="company" id="recCompany" class="form-control mb-3" placeholder="JP Morgan Chase/Barclays..." >
            </div>
            <div class="form-group">
                {{#if comPosErr}}
                <div class="error">{{message}}</div>
                {{/if}}
                <label for="recPosition" class="col-form-label">Position: </label>
                <input type="text" name="position" id="recPosition" class="form-control mb-3" placeholder="Regional Recruiter/Senior Recruiter..." >
            </div>
            <div class="form-group">
                {{#if cityErr}}
                <div class="error">{{message}}</div>
                {{/if}}
                <label for="recCity" class="col-form-label">City: </label>
                <input type="text" name="city" id="recCity" class="form-control mb-3" placeholder="Phoenix/New York..." >
            </div>
            <div class="form-group">
                {{#if stateErr}}
                <div class="error">{{message}}</div>
                {{/if}}
                <label for="recState" class="col-form-label">State: </label>
                <input type="text" name="state" id="recState" class="form-control mb-3" placeholder="CA/Utah..." >
            </div>
            <div class="form-group">
                <label for="recAbout" class="col-form-label">About: </label>
                <textarea id="recAbout" class="form-control h-100 mb-3" rows="5" placeholder="Describe yourself" ></textarea>
            </div>
            <button type="submit" id="recProfilesubmit" class="col-12 btn btn-dark btn-round">{{title}} Profile</button>
        </form>
    </div>
    {{!-- <script src="/public/script/profile.js"></script> --}}
</div>