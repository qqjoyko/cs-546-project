<div id="applicantLogin" aria-labelledby="Applicant Login">
    <div class="form-title text-center">
       <h4>Applicant Login</h4>
    </div>
    <div class="d-flex flex-column text-center">
        {{#if mainerr}}
        <div class="error">{{message}}</div>
        {{/if}}
        <form action="/users/login" method="post" id="apploginform">
            <div class="form-group">
                {{#if emailerr}}
                <div class="error">{{message}}</div>
                {{/if}}
                <input type="email" name="email" id="appAuthEmail" class="form-control" placeholder="Your email address" aria-placeholder="Your email address" required>
            </div>
            <div class="form-group">
                {{#if pwderr}}
                <div class="error">{{message}}</div>
                {{/if}}
                <input type="password" name="password" id="appAuthPwd" class="form-control" placeholder="Password" aria-placeholder="Password" required>
            </div>
            <div class="form-group">
                <input type="checkbox" id="appRememberSession"></input>
                <label for="rememberSession">Remember Me</label>
            </div>
            <button type="submit" id="apploginsubmit" class="col-12 btn btn-dark btn-round">Login</button>
        </form>
    </div>
    <div class="signup-section text-center">Not a member yet? <a href="/users/signup" class="text-info" id="appSignupBtn"> Sign Up</a>.</div>
</div>