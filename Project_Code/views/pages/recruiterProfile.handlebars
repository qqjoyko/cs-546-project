<section class="section profile-section" id="recProfile">
    {{!-- Delete Recruiter Modal --}}

    <div class="modal" tabindex="-1" role="dialog" id="recDelModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">Delete Recruiter</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <p>Would you like to delete your account?</p>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-danger btn-lg"><a href="/recruiters/delete/{{recid}}" class="text-decoration-none link-light">Delete my account</a></button>
            <button type="button" class="btn btn-primary" data-dismiss="modal">Cancel</button>
        </div>
        </div>
    </div>
    </div>

    {{!-- Main Profile Container --}}
    <div class="container">
        <div class="row">
            <div class="col">
            </div>
            <div class="col text-center mt-1">
                <h2>{{recruiter.firstName}} {{recruiter.lastName}}</h2>
                {{#if newRec}}
                {{else}}
                <h6>{{recruiter.profile.company.position}}, {{recruiter.profile.company.name}}</h6>
                {{/if}}
            </div>
            <div class="col d-flex justify-content-end">
                <button type="button" class="btn btn-danger px-4" id="recCreateProfileBtn" data-bs-toggle="modal" data-bs-target="#recDelModal">Delete</button>
            </div>
        </div>
        {{#if newRec}}
        <div class="row createprofilebtn">
            <div class="col text-center">
                <button type="button" class="btn btn-danger w-25 my-4" id="recCreateProfileBtn"><a href="/recruiters/profile/{{recid}}" class="text-decoration-none link-light">Create Profile</a></button>
            </div>
        </div>
        {{else}}
        <div class="row editprofilebtn">
            <div class="col text-center">
                <button type="button" class="btn btn-primary w-25 my-4" id="recEditProfileBtn"><a href="/recruiters/profile/{{recid}}" class="text-decoration-none link-light">Edit Profile</a></button>
            </div>
        </div>
        {{#if recruiter.profile.state}}
        <div class="row profile-section">
            <div class="col text-center font-weight-bold">
                <p class="font-weight-bold">{{recruiter.profile.city}}, {{recruiter.profile.state}}</p>
            </div>
        </div>
        {{/if}}
        <div class="row experience-section">
            <div class="col">
                <p>Position: {{recruiter.profile.company.position}}</p>
                <p>Company: {{recruiter.profile.company.name}}</p>
            </div>
        </div>
        <div class="row about-section">
            <div class="col">
                <h5>About Me:</h5>
                <br/>
                <p>{{recruiter.profile.company.description}}</p>
            </div>
        </div>
        {{/if}}
        <button class="btn btn-primary" type="button"><a href="/recruiters/jobs/new" class="text-decoration-none link-light">Create New Job</a></button>
        <div class="row job-section">
            <div class="accordion" id="job-accordion">
                {{#each jobs}}
                <div class="accordion-item">
                    <h2 class="accordion-header" id="jobheading{{@index}}">
                        <div class="container" id="jobContainer">
                            <div class="row p-3 border-bottom" id="jobModify">
                                <div class="col-9">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseJob{{@index}}" aria-expanded="false" aria-controls="collapseJob{{@index}}">
                                        {{jobDetails.title}}
                                    </button>
                                </div>
                                <div class="col d-md-flex justify-content-md-end">
                                    <button type="button" class="btn btn-secondary me-md-2">
                                        <a href="/jobs/recruiters/id/{{job_id}}" class="text-decoration-none link-light">Open</a></button>
                                    <button type="button" class="btn btn-success me-md-2">
                                        <a href="/recruiters/jobs/update/{{jobDetails._id}}" class="text-decoration-none link-light">Update</a></button>
                                    <button type="button" class="btn btn-danger me-md-2">
                                        <a href="/recruiters/jobs/delete/{{jobDetails._id}}" class="text-decoration-none link-light">Delete</a></button>
                                </div>
                            </div>
                        </div>
                    </h2>
                    <div id="collapseJob{{@index}}" class="accordion-collapse collapse" aria-labelledby="jobheading{{@index}}" data-bs-parent="job-accordion">
                        <div class="accordion-body">
                            <ul id="applicantList">
                                {{#each applicants}}
                                <li>
                                    <div class="container" id="appContainer">
                                        <div class="row p-3 border-bottom" id="appDetails">
                                            <div class="col-3">{{firstName}} {{lastName}}</div>
                                            <div class="col d-md-flex justify-content-md-end"><button type="button" class="btn btn-success me-md-2">Accept</button>
                                            <button type="button" class="btn btn-danger me-md-2">Reject</button></div>
                                        </div>
                                    </div>
                                </li>
                                {{/each}}
                            </ul>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
</section>